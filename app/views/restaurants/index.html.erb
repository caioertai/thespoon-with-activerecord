<h1>Restaurants APP</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <h2><%= restaurant.name %></h2>
      <p><%= restaurant.address %></p>
      <p><%= '*' * restaurant.stars %></p>
      <%= link_to 'Show details', restaurant %>
      <%= link_to 'Delete', restaurant, method: 'delete' %>
    </li>
  <% end %>
</ul>
